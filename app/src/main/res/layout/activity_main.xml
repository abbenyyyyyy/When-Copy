<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ListView
        android:id="@+id/list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:footerDividersEnabled="true"
        android:visibility="gone">

    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:visibility="gone">

        <ImageView
            android:id="@+id/item_icon_first"
            android:layout_width="@dimen/img_width"
            android:layout_height="@dimen/img_width"
            android:src="@mipmap/icon" />

        <TextView
            style="@style/topTextviewTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_icon_first"
            android:text="启用When Copy" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_width" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#b6b6b6"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/icon_search"
            android:layout_width="@dimen/img_width"
            android:layout_height="@dimen/img_width"
            android:src="@mipmap/search_true" />

        <TextView
            style="@style/topTextviewTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_search"
            android:text="搜索" />

        <TextView
            style="@style/bottomTextviewTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/icon_search"
            android:layout_toRightOf="@+id/icon_search"
            android:text="通过百度搜索复制内容" />

        <Switch
            android:id="@+id/search_switch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_width" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#b6b6b6"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/item_icon_third"
            android:layout_width="@dimen/img_width"
            android:layout_height="@dimen/img_width"
            android:src="@mipmap/translation_true" />

        <TextView
            style="@style/topTextviewTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_icon_third"
            android:text="翻译" />

        <TextView
            style="@style/bottomTextviewTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_icon_third"
            android:layout_toRightOf="@+id/item_icon_third"
            android:text="通过百度翻译翻译复制内容" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_width" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#b6b6b6"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/item_icon_fourth"
            android:layout_width="@dimen/img_width"
            android:layout_height="@dimen/img_width"
            android:src="@mipmap/insertevents_true" />

        <TextView
            style="@style/topTextviewTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_icon_fourth"
            android:text="日历事务" />

        <TextView
            style="@style/bottomTextviewTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_icon_fourth"
            android:layout_toRightOf="@+id/item_icon_fourth"
            android:text="在日历创建复制内容的事务" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_width" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#b6b6b6"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/item_icon_fifth"
            android:layout_width="@dimen/img_width"
            android:layout_height="@dimen/img_width"
            android:src="@mipmap/about" />

        <TextView
            style="@style/topTextviewTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_icon_fifth"
            android:text="关于"

            />

        <TextView
            style="@style/topTextviewTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_icon_fifth"
            android:layout_toRightOf="@+id/item_icon_fifth"
            android:text="关于"
            android:visibility="gone"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#b6b6b6"
        />

</LinearLayout>
